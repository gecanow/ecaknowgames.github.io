mixin appMainIcon(app)
    link(rel='stylesheet', href='/styles/apps-style.css')
    div
        .bubbleIcon
            a(onclick=`appClick("${app.id}")`, id=`${app.id}-icon`)
                p.IconNameView #{app.name}
                .IconView(class=`${app.style_id}Icon`)
        .invisible(id=`${app.id}-caret`)
            .caret.up